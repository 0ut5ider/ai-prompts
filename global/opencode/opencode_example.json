{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "LiteLLM": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LiteLLM",
      "options": {
        "baseURL": "http://<<IP>>:4000/v1",
        "apiKey": ""
      },
      "models": {
        "MiniMax M2.1": {
          "name": "MiniMax M2.1",
          "tools": true
        }
      }
    },
    "openrouter": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "OpenRouter",
      "options": {
        "baseURL": "https://openrouter.ai/api/v1",
        "apiKey": ""
      },
      "models": {
        "z-ai/glm-4.7": {
          "name": "GLM 4.7"
        }
      }
    },
    "Cerebo": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cerebo",
      "options": {
        "baseURL": "https://cerebo.roci.me",
        "apiKey": ""
      },
      "models": {
        "MiniMax M2.5": {
          "name": "MiniMax M2.5",
          "tools": true,
          "limit": {
            "context": 190000,
            "output": 65536
          }
        },
        "GLM 4.7": {
          "name": "GLM 4.7",
          "tools": true,
          "limit": {
            "context": 128000,
            "output": 65536
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    }
  }
}
